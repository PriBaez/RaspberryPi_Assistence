@model frontend.Models.Puesto
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <h5 class="card-header">Registro de nuevos Departamentos</h5>
  <div class="card-body">
    <form asp-action="Guardar" asp-controller="Puesto" method="post"> 
        <div class="mb-3">
            <label for="nombrePuesto" class="form-label">Nombre del Puesto</label>
            <input asp-for="NombrePuesto" type="text" class="form-control" id="nombrePuesto">
            <span asp-validation-for="NombrePuesto" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="IdDepartamento">Departamento</label>
            <select asp-for="IdDepartamento" asp-items="ViewBag.Departamentos" class="form-control">
                <option value="">Seleccionar un puesto</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripcion</label>
            <input asp-for="Descripcion" type="text" class="form-control" id="descripcion">
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2"><i class="bi bi-person-check me-1"></i>Guardar</button>
        <a asp-action="Listar" asp-controller="Puesto" class="btn btn-secondary"><i class="bi bi-arrow-90deg-left me-1"></i>Volver a la lista</a>
    </form>
    
    @{
        if (@ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        
        } else if (@ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        
    }
    
  </div>
</div>
