@model Puesto
@{
   ViewData["Title"] = "Eliminar";
   Layout = "~/Views/Shared/_Layout.cshtml";
   ViewData["BodyId"] = "appointment-body";
}

<div class="card">
  <h5 class="card-header">Eliminar Puesto</h5>
  <div class="card-body">

    <form asp-action="Eliminar" asp-controller="Puesto" method="post">

        <input asp-for="IdPuestoEmpleado" type="hidden" class="form-control">

        <div class="alert alert-danger" role="alert">
        Desea eliminar al siguiente empleado de la base de datos?
            <p>
                <b>ID #:</b> @Model.IdPuestoEmpleado<br>
                <b>Nombre del puesto:</b> @Model.NombrePuesto<br>
                <b>Departamento al que pertenece:</b> @Model.IdDepartamento <br>
                <b>Descripcion:</b> @Model.Descripcion <br>
                <b>
            </p>
        </div>
        
        <button type="submit" class="btn btn-danger me-2"><i class="bi bi-person-check me-1"></i>Eliminar</button>
        <a asp-action="Listar" asp-controller="Puesto" class="btn btn-secondary"><i class="bi bi-arrow-90deg-left me-1"></i>Volver a la lista</a>
    </form>
  </div>
</div>