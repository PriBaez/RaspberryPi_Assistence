@model frontend.Models.Departamento
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <h5 class="card-header">Registro de nuevos Departamentos</h5>
  <div class="card-body">
    <form asp-action="Guardar" asp-controller="Departamento" method="post"> 

        <div class="mb-3">
            <label for="nombreDepartamento" class="form-label">Nombre del departamento</label>
            <input asp-for="NombreDepartamento" type="text" class="form-control" id="nombreDepartamento">
            <span asp-validation-for="NombreDepartamento" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2"><i class="bi bi-person-check me-1"></i>Guardar</button>
        <a asp-action="Listar" asp-controller="Departamento" class="btn btn-secondary"><i class="bi bi-arrow-90deg-left me-1"></i>Volver a la lista</a>
    </form>
    
    @{
        if (@ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        
        } else if (@ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        
    }
    
  </div>
</div>
